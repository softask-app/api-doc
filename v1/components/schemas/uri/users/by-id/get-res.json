{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "user-details",
  "title": "User Details",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 0
    },
    "displayName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 64
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "created": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "id",
    "displayName",
    "email",
    "created"
  ],
  "additionalProperties": false
}